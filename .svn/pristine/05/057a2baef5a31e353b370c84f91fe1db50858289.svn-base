/*=====================================
	スタイルリセット
 =======================================*/
html, body, h1, h2, h3, h4, h5, h6, ul, ol, dl, li, dt, dd, p,
header, hgroup, section, article, aside, hgroup, footer, figure,
figcaption, nav {
    margin: 0;
    padding: 0;
    font-size: 100%;
}
.highlight {
    background-color: yellow;
    font-style: normal;
}
table {
    border-collapse: collapse;
}
th, td {
    padding: 0px;
}

